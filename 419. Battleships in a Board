class Solution(object):
    def countBattleships(self, board):
        """
        :type board: List[List[str]]
        :rtype: int
        """
        if len(board) == 0: return 0
        l,w = len(board),len(board[0])
        count = 0
        for i in range(l):
            for j in range(w):
                if board[i][j] == 'X' and (i==0 or board[i-1][j] == '.') and (j==0 or board[i][j-1] == '.'):
                    count += 1
        return count
